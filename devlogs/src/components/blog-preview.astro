---
interface Props {
    title: string;
    description: string;
    author_social: string;
    autor_text: string;
    url: string;
    date?: Date;
}

const { title, description, date, author_text, author_social, url } = Astro.props;
---

<a
    rel="prefetch"
    class="my-10 flex h-24 items-center rounded-xl border-[1px] border-white p-3 underline transition-shadow hover:shadow-2xl hover:shadow-indigo-500/40"
    href={url || "#"}
>
    <div class="flex-1">
        <h4>{title}</h4>
        <p class="text-white/80 decoration-white/80">
            {description}
        </p>
    </div>
    <div class="text-right text-white/60 underline decoration-white/60">
        <p>
            {
                !!date
                    ? new Date(date).toLocaleDateString("en-GB").replaceAll("/", "-")
                    : "Coming soon..."
            }
        </p>
        <object>
            <a href={author_social} target="_blank">
                <p>{author_text}</p>
            </a>
        </object>
    </div>
</a>
